        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Image Source="C:\github\Eng71\IndividualProject\HomeGaming.jpg" />
        </Grid>
        <Grid Grid.Column= "1">
